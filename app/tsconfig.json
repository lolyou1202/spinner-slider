{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./src",
		"paths": {
			"@app/*": ["app/*"],
			"@components/*": ["components/*"],
			"@assets/*": ["assets/*"],
			"@config/*": ["config/*"],
			"@constants/*": ["constants/*"],
			"@utils/*": ["utils/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
